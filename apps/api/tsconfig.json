{
	"compilerOptions": {
		"target": "ESNext",
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"emitDeclarationOnly": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@/env": ["./env"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
