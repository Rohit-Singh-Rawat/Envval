{
	"name": "@envval/api",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/server.ts",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun scripts/migrate.ts",
		"build": "tsx scripts/build.ts",
		"vercel-build": "bun run build"
	},
	"exports": {
		".": {
			"types": "./dist/app.d.ts",
			"default": "./dist/app.js"
		},
		"./hc": {
			"types": "./dist/hc.d.ts",
			"default": "./dist/hc.js"
		},
		"./auth": {
			"types": "./dist/modules/auth/auth.service.d.ts",
			"default": "./dist/modules/auth/auth.service.js"
		},
		"./routes": {
			"default": "./dist/api/v1/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*.d.ts"
			]
		}
	},
	"dependencies": {
		"@envval/db": "workspace:*",
		"@envval/email": "workspace:*",
		"@envval/queue": "workspace:*",
		"@hono/zod-validator": "^0.7.5",
		"@t3-oss/env-core": "^0.13.8",
		"@upstash/ratelimit": "^1.2.0",
		"@upstash/redis": "^1.34.3",
		"better-auth": "^1.4.5",
		"hono": "^4.10.6",
		"resend": "^4.0.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/node": "^20.11.17",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"esbuild": "^0.27.2"
	}
}
