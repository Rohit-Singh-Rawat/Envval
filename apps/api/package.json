{
	"name": "@envval/api",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/server.ts",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun scripts/migrate.ts",
		"build": "tsx scripts/build.ts",
		"local-build": "rm -rf dist && tsc && tsc-alias",
		"vercel-build": "bun run build"
	},
	"exports": {
		".": {
			"types": "./dist/app.d.ts",
			"default": "./dist/app.js"
		},
		"./hc": {
			"types": "./dist/hc.d.ts",
			"default": "./dist/hc.js"
		},
		"./auth": {
			"types": "./dist/modules/auth/auth.service.d.ts",
			"default": "./dist/modules/auth/auth.service.js"
		},
		"./routes": {
			"default": "./dist/api/v1/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*.d.ts"
			]
		}
	},
	"dependencies": {
		"@envval/db": "workspace:*",
		"@envval/email": "workspace:*",
		"@envval/queue": "workspace:*",
		"@hono/zod-validator": "^0.7.6",
		"@t3-oss/env-core": "^0.13.10",
		"@upstash/ratelimit": "^1.2.1",
		"@upstash/redis": "^1.36.2",
		"better-auth": "^1.4.18",
		"hono": "^4.11.9",
		"resend": "^4.8.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/node": "^20.19.33",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"esbuild": "^0.27.3"
	}
}
