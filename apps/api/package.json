{
	"name": "@envval/api",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "rm -rf dist && tsc && tsc-alias",
		"start": "node dist/server.js",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx scripts/migrate.ts"
	},
	"exports": {
		".": {
			"types": "./dist/app.d.ts",
			"default": "./src/app.ts"
		},
		"./hc": {
			"types": "./dist/hc.d.ts",
			"default": "./src/hc.ts"
		},
		"./auth": {
			"types": "./dist/modules/auth/auth.service.d.ts",
			"default": "./src/modules/auth/auth.service.ts"
		},
		"./routes": {
			"default": "./src/api/v1/index.ts"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*.d.ts"
			]
		}
	},
	"dependencies": {
		"@envval/db": "workspace:*",
		"@envval/email": "workspace:*",
		"@envval/queue": "workspace:*",
		"@hono/node-server": "^1.19.6",
		"@hono/zod-validator": "^0.7.5",
		"@t3-oss/env-core": "^0.13.8",
		"@upstash/ratelimit": "^1.2.0",
		"@upstash/redis": "^1.34.3",
		"better-auth": "^1.4.5",
		"hono": "^4.10.6",
		"resend": "^4.0.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/node": "^20.11.17",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3"
	}
}
