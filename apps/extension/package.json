{
	"name": "@envval/extension",
	"displayName": "envval",
	"description": "",
	"version": "1.0.3",
	"publisher": "envval",
	"icon": "./assets/icons/envval.png",
	"engines": {
		"vscode": "^1.106.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "envval.showQuickSyncAction",
				"title": "EnvVal: Show Quick Sync Action"
			},
			{
				"command": "envval.forceSync",
				"title": "EnvVal: Force Sync"
			},
			{
				"command": "envval.showLogs",
				"title": "EnvVal: Show Logs"
			},
			{
				"command": "envval.logout",
				"title": "EnvVal: Logout"
			},
			{
				"command": "envval.viewRepoIdentity",
				"title": "EnvVal: View Repository Identity"
			},
			{
				"command": "envval.setManualRepoIdentity",
				"title": "EnvVal: Set Manual Repository Identity"
			},
			{
				"command": "envval.setSubProjectPath",
				"title": "EnvVal: Set Sub-Project Path"
			},
			{
				"command": "envval.resetRepoIdentity",
				"title": "EnvVal: Reset Repository Identity"
			},
			{
				"command": "envval.migrateRepoIdentity",
				"title": "EnvVal: Migrate Repository Identity"
			},
			{
				"command": "envval.diagnoseRepoDetection",
				"title": "EnvVal: Diagnose Repository Detection"
			},
			{
				"command": "envval.refreshTrackedEnvs",
				"title": "Refresh Tracked Environments",
				"icon": "$(refresh)"
			},
			{
				"command": "envval.pushEnv",
				"title": "Sync Now",
				"icon": "$(sync)"
			},
			{
				"command": "envval.openFile",
				"title": "Open File",
				"icon": "$(go-to-file)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "envval-explorer",
					"title": "EnvVault",
					"icon": "assets/icons/envval.svg"
				}
			]
		},
		"views": {
			"envval-explorer": [
				{
					"id": "envvalTrackedEnvs",
					"name": "Tracked Environments",
					"type": "tree",
					"icon": "assets/icons/envval.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "envvalTrackedEnvs",
				"contents": "EnvVault helps you securely sync and back up your environment variables.\n[Sign In to Start Syncing](command:envval.showLogin)\nLearn more about [EnvVault](https://envvault.io)",
				"when": "envval:unauthenticated"
			},
			{
				"view": "envvalTrackedEnvs",
				"contents": "No environments are being tracked in this workspace yet.\n[Initialize Environment](command:envval.showInitPrompt)\n[Scan Workspace](command:envval.refreshTrackedEnvs)",
				"when": "envval:authenticated && envval:empty"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "envval.pushEnv",
					"when": "view == envvalTrackedEnvs && viewItem =~ /envItem/",
					"group": "inline"
				},
				{
					"command": "envval.openFile",
					"when": "view == envvalTrackedEnvs",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "envval.refreshTrackedEnvs",
					"when": "view == envvalTrackedEnvs",
					"group": "navigation"
				}
			]
		}
	},
	"configuration": {
		"type": "object",
		"title": "EnvVal",
		"properties": {
			"envval.autoDetectMonorepo": {
				"type": "boolean",
				"default": true,
				"description": "Automatically detect monorepo structure and prompt for sub-project selection"
			},
			"envval.preferredRemote": {
				"type": "string",
				"default": "origin",
				"enum": ["origin", "upstream", "any"],
				"enumDescriptions": [
					"Use 'origin' remote for repo identification",
					"Use 'upstream' remote for repo identification",
					"Use any available remote for repo identification"
				],
				"description": "Preferred Git remote to use for repo identification"
			},
			"envval.promptForMigration": {
				"type": "boolean",
				"default": true,
				"description": "Prompt when repo identity migration is detected"
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.19.3",
		"@types/vscode": "^1.107.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"dependencies": {
		"axios": "^1.13.2"
	}
}
